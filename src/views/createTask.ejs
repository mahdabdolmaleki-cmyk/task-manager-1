<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Task</title>
    <link rel="stylesheet" href="/styles.css">
</head>

<body>
    <!-- Navigation -->
    <nav class="navbar">
        <div class="nav-container">
            <a href="/" class="nav-logo">Task Manager</a>
            <ul class="nav-menu">
                <li><a href="/" class="nav-link">Home</a></li>
                <li><a href="/task/create" class="nav-link active">Create Task</a></li>
                <li><a href="/logout" class="nav-link">Logout</a></li>
            </ul>
        </div>
    </nav>

    <!-- Create Task Form -->
    <div class="form-container">
        <h2>Create New Task</h2>
        <% if (typeof status !=='undefined' ) { %>
            <div class="status">
                <%= status %>
            </div>
            <% } %>

                <form action="/task/create" method="post">
                    <div class="form-group">
                        <label for="forUser" class="form-label">Assign To:</label>
                        <select name="forUser" required>
                            <% if (users && users.length> 0) { %>
                                <% users.forEach(function(user) { %>
                                    <option value="<%= user._id %>">
                                        <%= user.name %> (<%= user.email %>) (<%= user.level %>)
                                    </option>
                                    <% }); %>
                                        <% } else { %>
                                            <option value="">No users available</option>
                                            <% } %>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="title" class="form-label">Task Title:</label>
                        <input type="text" name="title" placeholder="Enter task title" required>
                    </div>

                    <div class="form-group">
                        <label for="description" class="form-label">Description:</label>
                        <textarea name="description" placeholder="Enter task description" required></textarea>
                    </div>

                    <div class="form-group">
                        <div class="checkbox-group">
                            <input type="checkbox" name="urgent" value="true" id="urgent">
                            <label for="urgent" class="form-label" style="margin: 0;">Mark as Urgent</label>
                        </div>
                    </div>

                    <input type="submit" value="Create Task">
                </form>
    </div>

</body>

</html>